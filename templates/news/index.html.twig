{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 2%">

        <div class="offset-sm-4 col-sm-4">
            <!-- insertion d'un message pour prévenir que la mise a jour a bien été effectuer -->
            {% for message in app.flashes('messageCreateNew') %}
                <p style="color: #1c7430">{{ message }}</p>
            {% endfor %}

            <!-- Si l'insertion ne sais pas effectuer correctement je retourn un message d'erreur -->
            {%  if erreurNew is defined %}
                <p style="color: red">
                    {{ erreurNew }}
                </p>
            {% endif %}
            <form action="/postNew" method="post">
                <h4>Nouvelle News :</h4>
                <div class="form-group">
                    <label for="titreNews">Titre:</label>
                    <input type="text" class="form-control" id="titreNews" name="titre" required>

                </div>
                <div class="form-group">
                    <label for="imageNews">Choisir une image :</label>
                    <input type="file" class="form-control-file" id="imageNews" name="img">
                </div>

                <div class="form-group">
                    <label for="descriptionNews">Description:</label>
                    <textarea class="form-control" rows="5" id="descriptionNews" name="description" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary float-sm-right">Ajouter</button>

            </form>
        </div>
    </div>

{% endblock %}
